<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkyDelight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/lightblue2</item>
        <item name="colorPrimaryVariant">@color/lightblue3</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/darkblue2</item>
        <item name="colorSecondaryVariant">@color/darkblue3</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status and navigation bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>

        <!-- SkyDelight Icon -->
        <item name="loading_icon">@drawable/skydelight_logo_day</item>
        <item name="loading_icon_2">@drawable/skydelight_logo_day_2</item>

        <!-- Background Pictures -->
        <item name="start_screen_picture">@drawable/wallpaper_beach</item>

        <!-- Background Color -->
        <item name="pulsator_color">@color/darkpink</item>
        <item name="fragment_background">@color/ultralight</item>
        <item name="gradient_radius">500dp</item>
        <item name="fragment_background_radial_center">@color/ultralight</item>
        <item name="fragment_background_radial_side">@color/lightblue3</item>

        <!-- Text Colors -->
        <item name="text_color">@color/dark</item>
        <item name="text_color_hint">@color/lightblue3</item>

        <!-- Heart Pictures -->
        <item name="heart_confused">@drawable/heart_confused_day</item>
        <item name="heart_dead">@drawable/heart_dead_day</item>
        <item name="heart_happy">@drawable/heart_happy_day</item>
        <item name="heart_laughing">@drawable/heart_laughing_day</item>
        <item name="heart_relaxed">@drawable/heart_relaxed_day</item>
        <item name="heart_sad">@drawable/heart_sad_day</item>

        <!-- Blue Button -->
        <item name="btn_text_color_blue">@color/dark</item>
        <item name="btn_background_blue">@color/light</item>

        <!-- Green Button -->
        <item name="btn_text_color_green">@color/green</item>
        <item name="btn_background_green">@color/lightgreen</item>

        <!-- Red Button -->
        <item name="btn_text_color_red">@color/darkred</item>
        <item name="btn_background_red">@color/lightred</item>

        <!-- Yellow Button -->
        <item name="btn_text_color_yellow">@color/darkyellow</item>
        <item name="btn_background_yellow">@color/lightyellow</item>

        <!-- Gray Button -->
        <item name="btn_text_color_gray">@color/mediumgray</item>
        <item name="btn_background_gray">@color/lightgray</item>

        <!-- Material Alert Dialog -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <!-- Material Alert Dialog Style -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background -->
        <item name="colorSurface">@color/ultralight</item>

        <!-- Color on Button Pressed or On Surface -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorOnSurface">@color/dark</item>

        <!-- Applying Styles in Styles.xml -->
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.MaterialComponents.Body.Text.</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
    </style>
</resources>