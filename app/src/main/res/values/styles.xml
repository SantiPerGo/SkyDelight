    <style name="greenTextViewStyle">
        <item name="android:fontFamily">?attr/font_name</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/btn_text_color_green</item>
        <item name="android:shadowColor">?attr/btn_background_green</item>
