<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/corner_radius"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right"
        app:layout_constraintTop_toTopOf="@id/guideline_top">

        <LinearLayout
            android:id="@+id/linearLayoutElements"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3.6"
            android:background="@drawable/gradient_dialog_background"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="?attr/heart_relaxed"
                android:elevation="5dp"
                android:contentDescription="@string/app_name" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/custom_dialog_3"
                android:layout_marginRight="@dimen/custom_dialog_3"
                android:layout_gravity="center"
                android:text="@string/loading"
                android:fontFamily="?attr/font_name"
                android:gravity="center"
                android:textColor="?attr/colorSecondaryVariant"
                android:textStyle="bold"
                android:shadowColor="?attr/colorSecondaryVariant"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="@dimen/shadow_radius"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/min_size"
                app:autoSizeMaxTextSize="@dimen/max_size"
                app:autoSizeStepGranularity="@dimen/granularity_mega_size" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:layout_marginLeft="@dimen/custom_dialog_3"
                android:layout_marginRight="@dimen/custom_dialog_3"
                android:layout_gravity="center"
                android:text="@string/loading"
                android:fontFamily="?attr/font_name"
                android:gravity="center"
                android:textColor="?attr/colorSecondaryVariant"
                android:shadowColor="?attr/colorSecondaryVariant"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="@dimen/shadow_radius"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/min_size"
                app:autoSizeMaxTextSize="@dimen/max_size"
                app:autoSizeStepGranularity="@dimen/granularity_mega_size" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/btnClose"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/custom_dialog_4"
                android:layout_marginRight="@dimen/custom_dialog_4"
                android:backgroundTint="?attr/btn_background_blue"
                android:fontFamily="?attr/font_name"
                android:state_enabled="true"
                android:text="@string/loading"
                android:textColor="?attr/btn_text_color_blue"
                android:textStyle="bold"
                android:shadowColor="?attr/btn_text_color_blue"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="@dimen/shadow_radius"
                android:layout_gravity="center"
                app:cornerRadius="@dimen/corner_radius"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/min_size"
                app:autoSizeMaxTextSize="@dimen/max_size"
                app:autoSizeStepGranularity="@dimen/granularity_mega_size"
                app:rippleColor="?attr/btn_text_color_blue" />

            <LinearLayout
                android:id="@+id/linearLayoutButtons"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2.6">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/btnLeft"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/btn_background_green"
                    android:fontFamily="?attr/font_name"
                    android:state_enabled="true"
                    android:text="@string/loading"
                    android:textColor="?attr/btn_text_color_green"
                    android:textStyle="bold"
                    android:shadowColor="?attr/btn_text_color_green"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="@dimen/shadow_radius"
                    app:cornerRadius="@dimen/corner_radius"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="@dimen/min_size"
                    app:autoSizeMaxTextSize="@dimen/max_size"
                    app:autoSizeStepGranularity="@dimen/granularity_mega_size"
                    app:rippleColor="?attr/btn_text_color_green"
                    tools:ignore="TextContrastCheck" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/btnRight"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/btn_background_red"
                    android:fontFamily="?attr/font_name"
                    android:state_enabled="true"
                    android:text="@string/loading"
                    android:textColor="?attr/btn_text_color_red"
                    android:textStyle="bold"
                    android:shadowColor="?attr/btn_text_color_red"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="@dimen/shadow_radius"
                    app:cornerRadius="@dimen/corner_radius"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="@dimen/min_size"
                    app:autoSizeMaxTextSize="@dimen/max_size"
                    app:autoSizeStepGranularity="@dimen/granularity_mega_size"
                    app:rippleColor="?attr/btn_text_color_red"
                    tools:ignore="TextContrastCheck" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guideline_navbar_left" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guideline_navbar_right" />

</androidx.constraintlayout.widget.ConstraintLayout>