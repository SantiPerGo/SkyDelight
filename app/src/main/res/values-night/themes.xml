<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkyDelight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/darkblue2</item>
        <item name="colorPrimaryVariant">@color/darkblue3</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/lightblue2</item>
        <item name="colorSecondaryVariant">@color/light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status and navigation bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>

        <!-- SkyDelight Icon -->
        <item name="loading_icon">@drawable/skydelight_logo_night</item>
        <item name="loading_icon_2">@drawable/skydelight_logo_night_2</item>

        <!-- Background Pictures -->
        <item name="loading_screen_heart">@drawable/skydelight_heart_night</item>
        <item name="start_screen_picture">@drawable/wallpaper_night</item>

        <!-- Background Color -->
        <item name="fragment_background">@color/ultradark</item>

        <!-- Text Colors -->
        <item name="text_color">@color/darkblue1</item>
        <item name="text_color_hint">@color/ultralight</item>

        <!-- Blue Button -->
        <item name="btn_text_color_blue">@color/light</item>
        <item name="btn_background_blue">@color/dark</item>

        <!-- Green Button -->
        <item name="btn_text_color_green">@color/lightgreen</item>
        <item name="btn_background_green">@color/green</item>

        <!-- Red Button -->
        <item name="btn_text_color_red">@color/lightred</item>
        <item name="btn_background_red">@color/darkred</item>

        <!-- Yellow Button -->
        <item name="btn_text_color_yellow">@color/lightyellow</item>
        <item name="btn_background_yellow">@color/darkyellow</item>

        <!-- Gray Button -->
        <item name="btn_text_color_gray">@color/mediumgray</item>
        <item name="btn_background_gray">@color/lightgray</item>

        <!-- Material Alert Dialog -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <!-- Material Alert Dialog Style -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background -->
        <item name="colorSurface">@color/ultradark</item>

        <!-- Color on Button Pressed or On Surface -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorSecondary">@color/light</item>
        <item name="colorOnSurface">@color/light</item>

        <!-- Applying Styles in Styles.xml -->
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.MaterialComponents.Body.Text.</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
    </style>
</resources>